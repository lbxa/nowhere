{
  "name": "backend",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist",
    "test": "bun test",
    "healthcheck": "curl -f http://localhost:3000/api/health || exit 1",
    "docker:dev": "docker compose up -d",
    "docker:dev:down": "docker compose down",
    "docker:dev:logs": "docker compose logs -f",
    "docker:dev:shell": "docker compose exec backend sh",
    "docker:dev:build": "docker compose build --no-cache",
    "docker:prod": "docker compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "docker:prod:deploy": "./scripts/prod.sh deploy",
    "docker:clean": "docker system prune -f && docker volume prune -f"
  },
  "dependencies": {
    "express": "^4.18.0",
    "ws": "^8.14.0",
    "redis": "^4.6.0",
    "express-rate-limit": "^7.1.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "@types/node": "^20.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}